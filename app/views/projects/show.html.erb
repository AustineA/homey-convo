<div class="mx-auto md:w-2/3 w-full flex">
  <div class="w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

  <div class="mb-10 flex justify-between">
    <div>
      <%= link_to "Back to projects", projects_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to "Edit this project", edit_project_path(@project), class: "mt-2 rounded-lg py-3 px-5 bg-gray-300 inline-block font-medium" %>
      <div class="inline-block ml-2">
        <%= button_to "Destroy this project", @project, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-red-300 font-medium" %>
      </div>
    </div>

      <%= button_to @project.done ? "Mark as Not Done" : "Mark As Done", toggle_done_project_path(@project),
        method: :patch,
        class: "ml-2 rounded-lg py-3 px-5 bg-black text-gray-100 inline-block font-medium", data: { turbo: true },
        id: "done_button"
      %>

  </div>


    <%= render @project %>

    <h3 class="font-bold text-lg">Comments</h3>



    <div id="comments" class="w-full">
      <%# <%= render partial: 'comments/comment', collection: @project.comments %>
      <%= render @project.comments %>
    </div>

    <div class="w-full mt-10">
      <%= render 'comments/form' %>
    </div>

  </div>
</div>
